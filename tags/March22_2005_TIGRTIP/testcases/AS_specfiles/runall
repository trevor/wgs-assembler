#
echo "End-to-end run for genome specification:" $*
pwd
#
echo "Began at " `date` 
#
echo "an initial file clean"
rm -f $*.cms $*.dna $*.seq $*.frg *.urc $*.ofg $*.ovl $*.cgb $*.cgw
rm -f $*_*.urc
rm -rf $*.odb $*.cdb core
echo "SIM Create the urc files"
time gawk -f $AS_BIN/AS_SIM_celsim.awk -- -u -b 10000 -d $*.sim
#
for qqq in $*_*.urc ; do
  echo "OVL Create overlap records "
  echo "$*.odb is the fragment store directory"
  time overlap -a $*.odb ${qqq%%.urc}
  echo "CGB Update the chunk graph"
  echo "$*.cdb is the overlap store directory"
  time cgb -a $*.cdb ${qqq%%.urc}
  echo "CGW at this will process *.cgb files."
done
echo "Finished at " `date`
